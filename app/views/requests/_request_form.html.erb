<%= form_for @request, url: requests_path do |f| %>
  <%= render "shared/error_message", object: f.object %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control", required: true %>

  <%= f.label :content %>
  <%= f.text_area :content, class: "form-control", required: true %>

  <%= f.label :status do %>
    <%= f.radio_button :status, :sent %>
    <span><%= t "send_immediately" %></span>
  <% end %>

  <%= f.label :status do %>
    <%= f.radio_button :status, :pending, checked: true %>
    <span><%= t "send_later" %></span>
  <% end %>

  <%= f.submit t("send"), class: "btn btn-primary" %>
<% end %>
