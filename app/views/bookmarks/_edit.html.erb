<%= form_for @supports.user_bookmark(current_user), url: bookmark_path do |f| %>
  <%= render "shared/error_message", object: f.object %>
  <%= render "shared/error_message", object: f.object %>
  <%= f.hidden_field :book_id, value: @supports.user_bookmark(current_user).book.id %>
  <% Bookmark.reads.keys.each do |read_type| %>
    <%= f.radio_button :read, read_type %>
    <%= f.label read_type.to_sym %>
  <% end %>
  <%= f.submit t("save"), class: "btn btn-primary" %>
<% end %>
