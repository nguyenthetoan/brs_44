<header>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
         <div class="header-menu">
          <nav id="main-menu">
            <ul class="nav navbar-nav">
              <li class="logo">
                <%= link_to image_tag("logo.png", size: "170x33"), root_url %>
              </li>
              <li>
                <%= link_to t("home"), root_path %>
              </li>
              <li>
                <%= link_to t("books"), books_path %>
              </li>
            </ul>
            <%= form_tag(books_path, method: "get", class: "navbar-form navbar-left") do%>
              <div class="form-group">
                <%= search_field_tag "search", nil, class: "form-control",
                placeholder: t("search_by") %>
              </div>
              <%= button_tag(type: "submit", class: "btn btn-default") do %>
                <i class="fa fa-search" aria-hidden="true"></i>
              <% end %>
            <% end %>
            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in?  %>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    <%= t("my_account") %> <span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu">
                    <li>
                      <%= link_to t("messenger"), chatrooms_path %>
                    </li>
                    <li>
                      <%= link_to t("my_profile"), current_user %>
                    </li>
                  </ul>
                </li>
                <li class="nav-item btn-group"
                  data-behavior="notifications"
                  data-notifications="<%= render template: 'notifications/index',
                  formats: [:json] %>">
                    <a class="dropdown-toggle nav-link" data-behavior="notifications-link" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <%= fa_icon "bell" %> <span data-behavior="unread-count"></span>
                    </a>
                  <div class="dropdown-menu" aria-labelledby="dropdownMenu1" data-behavior="notification-items">
                  </div>
                </li>
                <li>
                  <%= link_to t(".logout"), logout_path, method: :delete %>
                </li>
              <% else %>
                <li>
                  <%= link_to t("signup"), signup_path %>
                </li>
                <li>
                  <%= link_to t(".login"), login_path %>
                </li>
              <% end %>
            </ul>
          </nav>
         </div>
      </div>
    </div>
  </div>
</header><!-- /header -->
