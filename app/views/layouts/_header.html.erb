<div class="navbar-wrapper">
  <div class="container-fluid">
    <nav class="navbar navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to t("app_name"), root_path, class: "navbar-brand" %>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="<%= "active" if params[:controller] == "static_pages" %>">
              <%= link_to t("home"), root_path %>
            </li>
            <li class="<%= "active" if params[:controller] == "books" %>" >
              <%= link_to t("books"), books_path %>
            </li>
            <li class="<%= "active" if params[:controller] == "requests" %>">
              <%= link_to t("requests"), requests_path %>
            </li>
          </ul>
          <% if signed_in? %>
            <ul class="nav navbar-nav pull-right">
              <li class=" dropdown">
                <a href="#" class="dropdown-toggle active" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                  <%= t "signed_as" %> <%= current_user.name %>
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to t("my_profile"), current_user %>
                  </li>
                </ul>
              </li>
              <li>
                <%= link_to t(".logout"), destroy_user_session_path, method: :delete %>
              </li>
              <li>
                <a href="#" class="show-search">
                  <i class="fa fa-search" aria-hidden="true"></i>
                </a>
              </li>
            </ul>
          <% else %>
            <ul class="nav navbar-nav pull-right">
              <li>
                <%= link_to t("signup"), new_user_registration_path %>
              </li>
              <li>
                <%= link_to t(".login"), new_user_session_path %>
              </li>
              <li>
                <a href="#" class="show-search">
                  <i class="fa fa-search" aria-hidden="true"></i>
                </a>
              </li>
            </ul>
          <% end %>
          <div class="search" id="search">
            <%= form_tag(books_path, method: "get", class: "navbar-form navbar-right") do%>
              <%= search_field_tag "search", nil, class: "form-control",
                placeholder: t("search_by") %>
              <%= submit_tag t("search"), class: "btn btn-search", name: nil %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>
  </div>
</div>

