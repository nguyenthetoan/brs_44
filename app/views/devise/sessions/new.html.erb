<% provide :title, t("sessions.new.login") %>
<h1><%= t "sessions.new.login" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for resource, as: resource_name, url: user_session_path do |f| %>
      <%= devise_error_messages! %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.submit t("sessions.new.login"), class: "btn btn-primary" %>
    <% end %>
    <p><%= t ".new_user" %> <%= link_to t("signup") , new_user_registration_path %> </p>
  </div>
</div>
