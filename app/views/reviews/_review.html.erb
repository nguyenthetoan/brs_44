<li class="review-item" id="<%= dom_id(review) %>">
  <div class="review-details">
    <div class="pull-right">
      <% if review.user == current_user %>
        <%= link_to review_path(review), class: "btn-edit-review" do %>
          <span><i class="fa fa-pencil-square-o"></i></span>
        <% end %>
        |
        <%= link_to review_path(review), method: :delete,
          data: {confirm: t("confirm_delete")} do %>
          <span class="pull-right">
            <i class="fa fa-times" aria-hidden="true"></i>
          </span>
        <% end %>
      <% end %>
    </div>
    <span class="rate-count">
      <% review.rate.times do %>
        <i class="fa fa-star" aria-hidden="true"></i>
      <% end %>
    </span>
    <p><%= link_to review.user.name, user_path(review.user) %>: </p>
    <p><%= review.content %></s>
    <p class="review-date">
      <%= review.created_at.strftime('%a, %d %b %Y %H:%M:%S') %>
    </p>
    <div class="reply-box">
      <ul class="comment-list">
        <% unless review.comments.nil? %>
          <%= render review.comments.latest %>
        <% end %>
      </ul>
      <div class="reply">
        <%= link_to t("reply"), new_comment_path, class: "btn-new-comment" %>
        <div class="comment-box">

        </div>
      </div>
    </div>
  </div>
</li>
