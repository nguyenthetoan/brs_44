<tr id="<%= dom_id(author) %>">
  <td><%= author.name %></td>
  <td><%= author.bio %></td>
  <td><%= author.books.size %></td>
  <td>
    <%= link_to admin_author_path(author), class: "btn-edit-author" do %>
      <i class="fa fa-pencil-square-o"></i>
    <% end %>
    |
    <%= link_to admin_author_path(author), class: "btn-delete-author" do %>
      <i class="fa fa-trash"></i>
    <% end %>
  </td>
 </tr>
