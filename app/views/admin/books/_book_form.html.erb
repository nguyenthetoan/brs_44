<%= form_for @book, url: admin_books_path do |f| %>
  <%= render "shared/error_message", object: f.object %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control", required: true %>

  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control" %>

  <%= f.label :publish_date %>
  <%= f.date_field :publish_date, class: "form-control", required: true %>

  <%= f.label :author %>
  <%= f.text_field :author, class: "form-control", required: true %>

  <%= f.label :pages %>
  <%= f.number_field :pages, class: "form-control", required: true %>

  <%= f.label :category_id %>
  <%= f.select :category_id, @categories.collect {|c| [c.name, c.id]}, {},
    {required: true, autofocus: true, class: "form-control"} %>
  <%= f.submit t("create"), class: "btn btn-primary" %>
<% end %>
