<%= form_for comment, url: comment_path(comment) do |f| %>
  <%= render "shared/error_message", object: f.object %>
  <%= f.label :content %>
  <%= f.text_field :content, class: "form-control", required: true %>
  <%= f.hidden_field :review_id %>
  <%= f.submit t("send"), class: "btn btn-primary" %>
<% end %>
